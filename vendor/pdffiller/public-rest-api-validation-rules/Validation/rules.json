{
  "fillableTemplate": {
    "document_id": "required",
    "fillable_fields": "required"
  },
  "callback": {
    "document_id": "required|integer",
    "event_id": "required|in:fill_request.done,signature_request.done",
    "callback_url": "required|url"
  },
  "documentMultipart": {
    "file": "required|max:25600|mimes:pdf,doc,docx,ppt,pptx,txt",
    "content": "string",
    "config": "string",
    "template": "json"
  },
  "documentUrl": {
    "file": "required|url",
    "content": "string",
    "config": "string",
    "template": "json"
  },
  "customLogoMultipart": {
    "file": "between:1,5120|mimes:jpg,jpeg,gif,png"
  },
  "customLogoUrl": {
    "file": "url"
  },
  "filledForm": {
    "status": "accepted"
  },
  "fillRequest": {
    "document_id": "required|integer|min:1",
    "access": "in:full,signature",
    "status": "in:public,private",
    "email_required": "boolean",
    "name_required": "boolean",
    "custom_message": "string",
    "notification_emails": "array|unique_recipient_email",
    "callback_url": "url",
    "redirect_url": "url",
    "allow_downloads": "boolean",
    "required_fields": "boolean",
    "custom_logo_id": "integer",
    "notification_emails.*.name": "string",
    "notification_emails.*.email": "required|email"
  },
  "folder": {
    "name": "required|string"
  },
  "signatureRequest": {
    "callback_url": "url",
    "document_id": "required|numeric",
    "method": "required|in:sendtoeach,sendtogroup",
    "sign_in_order": "required_if:method,sendtogroup|boolean",
    "envelope_name": "required_if:method,sendtogroup|max:255",
    "recipients": "required|array|between:1,20",
    "security_pin": "required_if:method,sendtoeach|in:standard,enhanced",
    "pin": "required_if:security_pin,enhanced|max:6"
  },
  "recipient": {
    "recipients.*.email": "required|email",
    "recipients.*.name": "required",
    "recipients.*.require_photo": "boolean",
    "recipients.*.message_subject": "required",
    "recipients.*.message_text": "required",
    "recipients.*.access": "required|in:signature,full",
    "recipients.*.order": "required_if:sign_in_order,1,true|numeric|min:1",
    "recipients.*.additional_documents": "array|max:150"
  },
  "token": {
    "data": "required|array"
  },
  "officeUpload": {
    "type": "required|in:pdf,docx,doc,ppt,pptx",
    "file": "required"
  },
  "officeUploadMimes": {
    "mime": "required|in:application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/octet-stream"
  },
  "application": {
    "id": "string",
    "name": "required|string",
    "description": "required|string",
    "domain": "required|url"
  },
  "adminApiLimits": {
    "user_id": "required|integer|min:1",
    "month": "integer|between:1,12",
    "year": "integer|min:2016"
  },
  "pagination": {
    "order": "string|in:desc,asc",
    "orderby": "string",
    "perpage": "integer|between:2,100"
  }
}